<%= form_for @zwierzak, html: { class: 'form-horizontal' } do |f| %>
  <div class="form-group">
    <%= f.label :imie, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :imie, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :gatunek, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :gatunek, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :rasa, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :rasa, class: 'text_field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :data_ur, class: 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :data_ur, class: 'text_field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit 'Zapisz', class: 'btn btn-primary' %>
      <%= link_to t('.cancel', default: t("Cofnij")),
                  zwierzaks_path, class: 'btn btn-default' %>
    </div>
  </div>
<% end %>
