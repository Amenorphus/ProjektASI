<%- model_class = Zwierzak -%>
<div class="page-header">
  <h1>Zwierzaki</h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:imie) %></dt>
      <dd><pre class="prettyprint"><%= @zwierzak.imie %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:gatunek) %></dt>
      <dd><pre class="prettyprint"><%= @zwierzak.gatunek %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:rasa) %></dt>
      <dd><pre class="prettyprint"><%= @zwierzak.rasa %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:data_ur) %></dt>
      <dd><pre class="prettyprint"><%= @zwierzak.data_ur %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', default: t("helpers.links.back")),
              zwierzaks_path, class: 'btn btn-default'  %>
  <%= link_to t('.edit', default: t("helpers.links.edit")),
              edit_zwierzak_path(@zwierzak), class: 'btn btn-default' %>
  <%= link_to t('.destroy', default: t("helpers.links.destroy")),
              zwierzak_path(@zwierzak),
              method: 'delete',
              data: { confirm: t('.confirm', default: t("helpers.links.confirm", default: 'Na pewno?')) },
              class: 'btn btn-danger' %>
</div>